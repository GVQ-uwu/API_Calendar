<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.api_calendar">

    <application
        android:allowBackup="true"
        android:label="API Calendar"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApiCalendar">

        <!-- Activities de la app -->
        <activity android:name=".ui.SettingsActivity" />
        <activity android:name=".ui.NotificationsActivity" />
        <activity android:name=".ui.ListActivity" />
        <activity android:name=".ui.CalendarActivity" />
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
